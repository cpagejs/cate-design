{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    // "types": ["webpack-env"],
    "noImplicitAny": false,
    "paths": {
      "@/*": ["packages/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "../typings"
  },
  "include": [
    "../packages/**/*.ts",
    "../packages/**/*.tsx",
    "../packages/**/*.vue",
    "../packages/**/*.ts",
    "../packages/**/*.tsx"
  ]
}
